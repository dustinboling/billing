%h2 Register for an Account

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
	= devise_error_messages!

	%ul
		%li.field
			= f.email_field :email, :autofocus => true, :class => 'input', :placeholder => 'Email address'

		%li.field
			= f.password_field :password, :class => 'input', :placeholder => 'Password'
		
		%li.field
			= f.password_field :password_confirmation, :class => 'input', :placeholder => 'Password confirmation'

		%li
			%span.medium.primary.btn
				= f.submit "Register"
